<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MathsVisualisationTool">

    <!-- StackPanelStyle.xaml - STYLING FOR STACK PANELS -->

    <Style x:Key="clock_StackPanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{StaticResource MainColour_MainBackground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="result_StackPanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{StaticResource MainColour_MainBackground}"/>
    </Style>

    <Style x:Key="error_StackPanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{StaticResource MainColour_SubBackground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>