<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MathsVisualisationTool">
   
    <!-- LIST BOX - STYLING FOR LIST BOXS -->
    <Style x:Key="ListBox_Style" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{StaticResource ListBox_Background}"/>
        <Setter Property="Foreground" Value="{StaticResource ListBox_Foreground}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="3 3 3 3"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource ListBox_Background}"/>
    </Style>
</ResourceDictionary>