<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MathsVisualisationTool">
    
    <!-- COLOURS USED FOR COMPONENTS THAT HOLD/USE TEXT -->
    <SolidColorBrush x:Key="ListBox_Background" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="ListBox_Foreground" Color="#F2F2F2"/>

    <!-- LIST BOX - STYLING FOR LIST BOXS -->
    <Style x:Key="ListBox_Style" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{StaticResource ListBox_Background}"/>
        <Setter Property="Foreground" Value="{StaticResource ListBox_Foreground}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>