<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MathsVisualisationTool">

    <!-- GridStyle.xaml - FOCUSES ON STYLING BOTH THE GRIDS AND FEATURES RELATING TO THE GRIDS -->

    <!-- VERTICAL GRID SPLITTER STYLE -->
    <Style x:Key="GrdSpltrVertical_Style" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="{StaticResource MainColour_SubBackground}"/>
        <Setter Property="Margin" Value="-3 -3 -3 -3"/>
        <Setter Property="Width" Value="3"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- HORIZONTAL GRID SPLITTER STYLE -->
    <Style x:Key="GrdSpltrHorizontal_Style" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="{StaticResource MainColour_SubBackground}"/>
        <Setter Property="Margin" Value="-5 -3 -5 -3"/>
        <Setter Property="Height" Value="3"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>