<Window x:Class="MathsVisualisationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathsVisualisationTool"
        mc:Ignorable="d"
        Title="SolveIt Interpreter"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Background="#424242"
        Icon="../images/icons/SolveIT.ico" Width="1209.104" Height="1021.726">

    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Open" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Save" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="SaveAs" CanExecute="CommonCommandBinding_CanExecute"/>
        
        <CommandBinding Command="Cut" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Copy" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Paste" CanExecute="CommonCommandBinding_CanExecute"/>

        <CommandBinding Command="Undo" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Redo" CanExecute="CommonCommandBinding_CanExecute"/>
    </Window.CommandBindings>
    
    <Grid>
        <DockPanel LastChildFill="True">
            <!-- MAIN MENU/NAVIGATION MENU-->
            <Menu DockPanel.Dock="Top">
                <!--MAIN TOP MENU - FILE DROP DOWN-->
                <MenuItem Header="_File">
                    <MenuItem Header="_New"/>
                    <MenuItem Header="_Open" ToolTip="Open saved SolveIT file" Icon="&#x1F4C2;"/>
                    <Separator/>
                    <MenuItem Header="_Save" ToolTip="Save" Icon="&#x1F4BE;">
                        <MenuItem Header="_Save" Icon="&#128190;"/>
                        <MenuItem Header="Save as" Icon="&#128190;"/>
                        <MenuItem Header="Save all"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="E_xit" Click="OnExitMenuClicked"/>
                </MenuItem>
                <!--MAIN TOP MENU - EDIT DROPDOWN-->
                <MenuItem Header="_Edit"></MenuItem>
                <!--MAIN TOP MENU - VIEW DROPDOWN-->
                <MenuItem Header="_View"></MenuItem>
                <!--MAIN TOP MENU - TOOLS DROPDOWN-->
                <MenuItem Header="_Tools"></MenuItem>
                <!--MAIN TOP MENU - HELP DROPDOWN-->
                <MenuItem Header="_Help">
                    <MenuItem Header="Test Document" Click="OnTestDocClicked"/>
                    <MenuItem Header="View Help"/>
                </MenuItem>
            </Menu>
            <!-- TOOL BAR MENU -->
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <!-- BACK BUTTON -->
                    <Button x:Name="Back" ToolBar.OverflowMode="AsNeeded" ToolTip="Navigate Back" Click="OnBack_Clicked">
                        <Image Source="../images/icons/back.png" Width="20"/>
                    </Button>
                    <!-- FOREWARD BUTTON -->
                    <Button x:Name="Forward" ToolBar.OverflowMode="AsNeeded" ToolTip="Navigate Forward" Click="OnForward_Clicked">
                        <Image Source="../images/icons/forward.png" Width="20"/>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <!-- NEW BUTTON -->
                    <Button Command="New" ToolBar.OverflowMode="AsNeeded" ToolTip="New SolveIT" Click="OnNew_Clicked">
                        <Image Source="../images/icons/newFile.png" Width="20"/>
                    </Button>
                    <!-- OPEN BUTTON -->
                    <Button Command="Open" ToolBar.OverflowMode="AsNeeded" ToolTip="Open Previous SolveIT Solutions" Click="OnOpen_Clicked">
                        <Image Source="../images/icons/openFolder.png" Width="20"/>
                    </Button>
                    <!-- SAVE BUTTON -->
                    <Button Command="Save" ToolBar.OverflowMode="AsNeeded" ToolTip="Save" Click="OnSave_Clicked">
                        <Image Source="../images/icons/save.png" Width="20"/>
                    </Button>
                    <!-- SAVE AS BUTTON -->
                    <Button Command="SaveAs" ToolBar.OverflowMode="AsNeeded" ToolTip="Save As" Click="OnSaveAs_Clicked">
                        <Image Source="../images/icons/saveAs.png" Width="20"/>
                    </Button>
                    <!-- PRINT BUTTON -->
                    <Button ToolBar.OverflowMode="AsNeeded" ToolTip="Print SolveIT Solution" Click="OnPrint_Clicked">
                        <Image Source="../images/icons/print.png" Width="20"/>
                    </Button>
                    <!-- PAGE SETUP BUTTON -->
                    <Button ToolBar.OverflowMode="AsNeeded" ToolTip="Print SolveIT Solution" Click="OnPageSetup_Clicked">
                        <Image Source="../images/icons/pageSetup.png" Width="20"/>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <!-- CUT BUTTON -->
                    <Button Command="Cut" ToolTip="Cut Selection to Windows Clipboard " Padding="2" Click="OnCut_Clicked">
                        <Image Source="../images/icons/cut.png" Width="20"/>
                    </Button>
                    <!-- COPY BUTTON -->
                    <Button Command="Copy" ToolTip="Copy Selection to Windows Clipboard " Padding="2" Click="OnCopy_Clicked">
                        <Image Source="../images/icons/copy.png" Width="20"/>
                    </Button>
                    <!-- PASTE BUTTON -->
                    <Button Command="Paste" ToolTip="Paste From Windows Clipboard" Padding="2" Click="OnPaste_Clicked">
                        <Image Source="../images/icons/paste.png" Width="20"/>
                    </Button>
                    <!-- UNDO BUTTON -->
                    <Button Command="Undo" ToolTip="Undo" Padding="2" Click="OnUndo_Clicked">
                        <Image Source="../images/icons/undo.png" Width="20"/>
                    </Button>
                    <!-- REDO BUTTON -->
                    <Button Command="Redo" ToolTip="Redo" Padding="2" Click="OnRedo_Clicked">
                        <Image Source="../images/icons/redo.png" Width="20"/>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <!-- RUN/SUBMIT BUTTON -->
                    <Button ToolTip="Run Input" Padding="2" Click="OnRun_Clicked">
                        <Image Source="../images/icons/run.png" Width="20"/>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <!-- SETTINGS BUTTON -->
                    <Button x:Name="SettingsBtn" ToolTip="SolveIT Settings" Padding="2" Click="OnSettings_Clicked">
                        <Image Source="../images/icons/settings.png" Width="20"/>
                    </Button>
                    <!-- HELP BUTTON -->
                    <Button x:Name="HelpBtn" ToolTip="SolveIT Help" Padding="2" Click="OnHelp_Clicked">
                        <Image Source="../images/icons/lifebuoy.png" Width="20"/>
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <!-- BOTTOM SECTION OF DOCKPANEL -->
            <!-- Although not the main bottom section of the interpreter
            this section contains a status bar for the interpreter-->
            <StatusBar Name="statBar" DockPanel.Dock="Bottom" Background="LightGray" VerticalAlignment="Bottom" Margin="0 3 0 0">
                <StatusBarItem>
                    <TextBlock FontSize="10">Ready...</TextBlock>
                </StatusBarItem>
            </StatusBar>

            <!-- LEFT SECTION OF DOCKPANEL-->
            <!-- Left Section to include a File Explorer setup
            and links to documentation relevant to the interpreter-->
            <Grid Name="leftGrid" DockPanel.Dock="Left" Margin="3 3 3 3" Width="350">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="varGrid" Margin="3" Grid.Row="0">
                    <DataGrid x:Name="varTable" AutoGenerateColumns="True" Grid.Row="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Variable" Binding="{Binding AssignedVariable}"/>
                            <DataGridTextColumn Header="Stored Value" Binding="{Binding StoredValue}"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TypeOfVariable}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <Grid x:Name="docViewerGrid" Margin="3" Grid.Row="1">
                    <DocumentViewer x:Name="documentViewer" Grid.Row="0" Margin="3 3 0 0"></DocumentViewer>
                </Grid>
            </Grid>

            <!-- RIGHT SECTION OF DOCKPANEL-->
            <!-- Right Section to include an index of variables
            that are currently being stored and possibly "cheat sheet"
            of quick commands-->
            <Grid Name="rightGrid" DockPanel.Dock="Right" Margin="3" MaxWidth="280">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="favs" Margin="3" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Background="LightGray">
                        <WrapPanel x:Name="favsPanel" Margin="3" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="320" AllowDrop="True" Drop="OnDrop"/>
                    </StackPanel>
                </Grid>
                <Grid x:Name="keypadSelector" Margin="3" Grid.Row="1">
                    <TabControl>
                        <!-- NUMERICAL TAB-->
                        <TabItem Header="Numbers">
                            <StackPanel Orientation="Horizontal">
                                <WrapPanel x:Name="numberPanel" Margin="3" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="400">
                                    <!-- FIRST ROW OF 3 ITEMS/FUNCTIONS -->
                                    <Button Margin="3 6 3 3" FontSize="30" Click="OnLessThan_Clicked">
                                        <Image Source="../images/numerical/lessThan.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="30" Click="OnEqual_Clicked">
                                        <Image Source="../images/arithmetic/equal.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="30" Click="OnGreaterThan_Clicked">
                                        <Image Source="../images/numerical/moreThan.png" Height="40"/>
                                    </Button>
                                    <!-- SECOND ROW OF 3 ITEMS/FUNCTIONS -->
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On7_Clicked">
                                        <Image Source="../images/numerical/seven.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On8_Clicked">
                                        <Image Source="../images/numerical/eight.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On9_Clicked">
                                        <Image Source="../images/numerical/nine.png" Height="40"/>
                                    </Button>
                                    <!-- THIRD ROW OF 3 ITEMS/FUNCTIONS -->
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On4_Clicked">
                                        <Image Source="../images/numerical/four.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On5_Clicked">
                                        <Image Source="../images/numerical/five.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On6_Clicked">
                                        <Image Source="../images/numerical/six.png" Height="40"/>
                                    </Button>
                                    <!-- FOURTH ROW OF 3 ITEMS/FUNCTIONS -->
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On1_Clicked">
                                        <Image Source="../images/numerical/one.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On2_Clicked">
                                        <Image Source="../images/numerical/two.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On3_Clicked">
                                        <Image Source="../images/numerical/three.png" Height="40"/>
                                    </Button>
                                    <!-- FIFTH ROW OF 3 ITEMS/FUNCTIONS -->
                                    <Button Margin="3 6 3 3" FontSize="24" Click="On0_Clicked">
                                        <Image Source="../images/numerical/zero.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="OnDecimal_Clicked">
                                        <Image Source="../images/numerical/decimal.png" Height="40"/>
                                    </Button>
                                    <Button Margin="3 6 3 3" FontSize="24" Click="OnAns_Clicked">
                                        <Image Source="../images/numerical/ans.png" Height="40"/>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </TabItem>
                        <!-- ARITHMETIC FUNCTIONS TAB -->
                        <TabItem Header="Arithmetic Functions">
                            <StackPanel Orientation="Horizontal">
                                <WrapPanel x:Name="functionPanel" Margin="3" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="400" MouseRightButtonDown="OnDrag">
                                    <!-- FIRST ROW OF 3 ITEMS/FUNCTIONS -->
                                    <!-- LEFT BRACKET BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnLeftBracket_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/leftBracket.png" Height="40"/>
                                            <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Bracket]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- INDICE BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnEquivilant_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/equiv.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Equivilant]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- RIGHT BRACKET BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnRightBracket_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/rightBracket.png" Height="40"/>
                                            <!--<TextBlock Text="&#x2d;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Bracket]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- SECOND ROW OF 3 ITEMS/FUNCTIONS -->
                                    <!-- ADDITION BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnAdd_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/add.png" Height="40"/>
                                            <!--<TextBlock Text="&#xd7;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Addition]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- SUBTRACTION BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnSub_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/sub.png" Height="40"/>
                                            <!--<TextBlock Text="&#xf7;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Subtract]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- INDICE BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnIndice_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/indice.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Indice]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- THIRD ROW OF 3 ITEMS/FUNCTIONS -->
                                    <!-- MULTIPLICATION BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnMul_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/mul.png" Height="40"/>
                                            <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Multiply]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- DIVISION BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnDiv_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/div.png" Height="40"/>
                                            <!--<TextBlock Text="&#x2d;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Divide]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- SQUARE ROOT BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnSqrt_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/sqrt.png" Height="40"/>
                                            <!--<TextBlock Text="&#x221a;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Square Root]" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="10"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- FOURTH ROW OF 3 ITEMS/FUNCTIONS -->
                                    <!-- PERCENTAGE BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnPercent_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/percent.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Percent]" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="10"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- PI BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnPi_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/pi.png" Height="40"/>
                                            <!--<TextBlock Text="&#960;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Pi]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- N SQUARE ROOT BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnN_Sqrt_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/nSqrt.png"  Height="40"/>
                                            <!--<TextBlock Text="&#x221a;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[N Squared]" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="10"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- FIFTH ROW OF 3 ITEMS/FUNCTIONS -->
                                    <!-- SIN BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnSin_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/sin.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Sin]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- COS BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnCos_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/cos.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Cos]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- TAN BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnTan_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/arithmetic/tan.png" Height="40"/>
                                            <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                            <TextBlock Text="[Tan]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </TabItem>
                        <!-- GREEK CHARACTERS TAB-->
                        <TabItem Header="Greek Characters">
                            <StackPanel Orientation="Horizontal">
                                <WrapPanel x:Name="greekPanel" Margin="3" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="400">
                                    <!-- FIRST ROW OF 3 GREEK CHARACTERS -->
                                    <!-- ALPHA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnAlpha_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/alpha.png" Height="40" />
                                            <TextBlock Text="[Alpha]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- BETA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnBeta_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/beta.png" Height="40"/>
                                            <TextBlock Text="[Beta]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- DELTA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnDelta_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/Delta.png" Height="40"/>
                                            <TextBlock Text="[Delta]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- SECOND ROW OF 3 GREEK CHARACTERS -->
                                    <!-- DELTA (LOWER CASE) BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="On_delta_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/delt.png" Height="40"/>
                                            <TextBlock Text="[delta]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- EPSILON BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnEpsilon_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/epsilon.png" Height="40"/>
                                            <TextBlock Text="[Epsilon]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- GAMMA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnGamma_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/gamma.png" Height="40"/>
                                            <TextBlock Text="[Gamma]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- THIRD ROW OF 3 GREEK CHARACTERS -->
                                    <!-- LAMBDA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnLambda_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/lambda.png" Height="40"/>
                                            <TextBlock Text="[Lambda]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- THETA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnTheta_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/theta.png" Height="40"/>
                                            <TextBlock Text="[Theta]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- MU BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnMu_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/mu.png" Height="40"/>
                                            <TextBlock Text="[Mu]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- FOURTH ROW OF 3 GREEK CHARACTERS -->
                                    <!-- OMEGA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnOmega_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/Ohm.png" Height="40"/>
                                            <TextBlock Text="[Omega]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- OMEGA (LOWER CASE) BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="On_omega_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/omega.png" Height="40"/>
                                            <TextBlock Text="[omega]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- PHI BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnPhi_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/phi.png" Height="40"/>
                                            <TextBlock Text="[Phi]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- FIFTH ROW OF 3 GREEK CHARACTERS -->
                                    <!-- PSI BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnPsi_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/psi.png" Height="40"/>
                                            <TextBlock Text="[Psi]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- RHO BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnRho_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/rho.png" Height="40"/>
                                            <TextBlock Text="[Rho]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- SIGMA BUTTON-->
                                    <Button Margin="3 6 3 3" Padding="5" Click="OnSigma_Clicked">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="../images/greek/Sigma.png" Height="40"/>
                                            <TextBlock Text="[Sigma]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>

            <!-- BOTTOM SECTION OF DOCKPANEL -->
            <!-- The bottom section of the interpreter is where the
            input will be situated. i.e. user enters an equation into the 
            text box at the base of this page -->
            <Grid DockPanel.Dock="Bottom" Margin="3 0 3 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Margin="0 0 0 3" Name="inputBox" FontSize="20" Padding="5"/>

                <Button Name="submitBtn" Click="OnRun_Clicked" IsDefault="True" Grid.Column="1" Margin="3 0 0 3"  Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Run" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="26" Margin="6 3 0 3 "/>
                        <Image Source="../images/icons/run.png" Height="40"  Margin="6 0 3 3"/>
                        <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                    </StackPanel>
                </Button>
            </Grid>

            <!-- TOP SECTION OF DOCK PANEL (EXCLUDING MAIN MENU)-->
            <!-- This is the main section of where any outputs will be 
            displayed. Possible introduce a tab system to view different
            versions of an output i.e. graphical to numerical-->
            <Grid x:Name="topDock" DockPanel.Dock="Top" Margin="3">
                <TabControl>
                    <TabItem Header="Tab 1">
                        <ListBox Name="Results" Margin="3" BorderBrush="Black" BorderThickness="2" Padding="5" FontSize="24">
                            <ToolBarTray Orientation="Vertical">
                                <ToolBar>
                                    <Button x:Name="listCut" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnCut_Clicked">
                                        <Image Source="../images/icons/cut.png" Width="20"/>
                                    </Button>
                                    <Button x:Name="listCopy" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnCopy_Clicked">
                                        <Image Source="../images/icons/copy.png" Width="20"/>
                                    </Button>
                                    <Button x:Name="listPaste" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnPaste_Clicked">
                                        <Image Source="../images/icons/paste.png" Width="20"/>
                                    </Button>
                                </ToolBar>
                            </ToolBarTray>
                        </ListBox>
                        
                        <!--<TextBlock Name="Results" Margin="3" Padding="5" Text="{Binding ElementName=inputBox, Path=Text, Mode=OneWay, UpdateSourceTrigger=Explicit}"/>-->
                    </TabItem>
                    <TabItem Header="Tab 2">
                        <TextBlock Text="Graphs will go here..."/>
                    </TabItem>
                </TabControl>
            </Grid>
           

            <!-- TESTING TESTING -->
        </DockPanel>
    </Grid>
</Window>
