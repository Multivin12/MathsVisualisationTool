<Window x:Class="MathsVisualisationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProjectCalamari" Height="516.697" Width="941.131">

    <DockPanel Style="{StaticResource dockPanelStyle}">
        <Menu Style="{StaticResource menuStyle}">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>

            <MenuItem Header="Edit">
                <MenuItem Command="Cut" />
                <MenuItem Command="Copy" />
                <MenuItem Command="Paste" />
            </MenuItem>

            <MenuItem Header="View">
                <MenuItem Header="Console Window"/>
                <MenuItem Header="Variables"/>
            </MenuItem>

            <MenuItem Header="Tools">
                <MenuItem Header="Command Keyboard"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="output" Margin="20,20,20,20" Grid.Row="0" IsReadOnly="True" Text=">>" FontSize="18"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="textBox" Grid.Column="0" Height="25" Margin="20,0,20,10" FontSize="14" VerticalContentAlignment="Center"/>
                <Button x:Name="button" Content="Enter" Height="25" Margin="0,0,20,10" Grid.Column="1" FontSize="14"/>
            </Grid>

        </Grid>

        
    </DockPanel>
</Window>
