<Window x:Class="MathsVisualisationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathsVisualisationTool"
        mc:Ignorable="d"
        Title="SolveIt Interpreter"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Background="SlateGray"
        Icon="../images/pi_Icon.ico" Width="1209.104" Height="839.797">

    <Grid>
        <DockPanel LastChildFill="True">
            <!-- MAIN MENU/NAVIGATION MENU-->
            <Menu DockPanel.Dock="Top">
                <!--MAIN TOP MENU - FILE DROP DOWN-->
                <MenuItem Header="_File">
                    <MenuItem Header="Save" Icon="&#x1F4BE;">
                        <MenuItem Header="_Save"/>
                        <MenuItem Header="_Save as"/>
                        <MenuItem Header="_Save all"/>
                    </MenuItem>
                    <MenuItem Header="E_xit" Click="OnExitMenuClicked"/>
                </MenuItem>
                <!--MAIN TOP MENU - EDIT DROPDOWN-->
                <MenuItem Header="_Edit"></MenuItem>
                <!--MAIN TOP MENU - VIEW DROPDOWN-->
                <MenuItem Header="_View"></MenuItem>
                <!--MAIN TOP MENU - TOOLS DROPDOWN-->
                <MenuItem Header="_Tools"></MenuItem>
                <!--MAIN TOP MENU - HELP DROPDOWN-->
                <MenuItem Header="_Help">
                    <MenuItem Header="View Help"/>
                </MenuItem>
            </Menu>

            <!-- BOTTOM SECTION OF DOCKPANEL -->
            <!-- Although not the main bottom section of the interpreter
            this section contains a status bar for the interpreter-->
            <StatusBar Name="statBar" DockPanel.Dock="Bottom" Background="LightGray" VerticalAlignment="Bottom" Margin="0 3 0 0">
                <StatusBarItem>
                    <TextBlock FontSize="10">Ready...</TextBlock>
                </StatusBarItem>
            </StatusBar>

            <!-- LEFT SECTION OF DOCKPANEL-->
            <!-- Left Section to include a File Explorer setup
            and links to documentation relevant to the interpreter-->
            <Grid Name="leftGrid" DockPanel.Dock="Left" Margin="3 3 3 3" Width="350">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--<Button Margin="3" MaxWidth="300" MinWidth="200">Button 1</Button>
                <Button Margin="3" MaxWidth="300" MinWidth="200">Button 2</Button>-->
                <DocumentViewer Grid.Row="0" Margin="3 3 0 0"></DocumentViewer>
                <TreeView Grid.Row="1" MinHeight="200" VerticalAlignment="Top" Margin="3 3 0 0"></TreeView>
            </Grid>

            <!-- RIGHT SECTION OF DOCKPANEL-->
            <!-- Right Section to include an index of variables
            that are currently being stored and possibly "cheat sheet"
            of quick commands-->
            <Grid Name="rightGrid" DockPanel.Dock="Right" Margin="3" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="varGrid" AutoGenerateColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Variable" Binding="{Binding AssignedVariable}"/>
                        <DataGridTextColumn Header="Stored Value" Binding="{Binding StoredValue}"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TypeOfVariable}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- BOTTOM SECTION OF DOCKPANEL -->
            <!-- The bottom section of the interpreter is where the
            input will be situated. i.e. user enters an equation into the 
            text box at the base of this page -->
            <Grid DockPanel.Dock="Bottom" Margin="3 0 3 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Margin="0 0 0 3" Name="inputBox" FontSize="14"/>
                <Button Content="Submit" IsDefault="True" Grid.Column="1" Margin="3 0 0 3" FontSize="14" Click="OnSubmitClicked" />
            </Grid>

            <!-- TOP SECTION OF DOCK PANEL (EXCLUDING MAIN MENU)-->
            <!-- This is the main section of where any outputs will be 
            displayed. Possible introduce a tab system to view different
            versions of an output i.e. graphical to numerical-->
            <ListBox x:Name="Result" DockPanel.Dock="Top" Margin="3" BorderBrush="Black" BorderThickness="2" Padding="5"/>

            <!-- TESTING TESTING -->
        </DockPanel>
    </Grid>
</Window>
