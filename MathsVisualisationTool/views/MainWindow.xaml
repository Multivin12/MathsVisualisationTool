<Window x:Class="MathsVisualisationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathsVisualisationTool"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="SolveIt Interpreter"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Background="{StaticResource MainColour_MainBackground}"
        Icon="../images/icons/SolveIT.ico" Width="1209.104" Height="1021.726">

    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Open" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Save" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="SaveAs" CanExecute="CommonCommandBinding_CanExecute"/>

        <CommandBinding Command="Cut" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Copy" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Paste" CanExecute="CommonCommandBinding_CanExecute"/>

        <CommandBinding Command="Undo" CanExecute="CommonCommandBinding_CanExecute"/>
        <CommandBinding Command="Redo" CanExecute="CommonCommandBinding_CanExecute"/>
    </Window.CommandBindings>

    <Grid>
        <DockPanel LastChildFill="True">
            <!-- MAIN MENU/NAVIGATION MENU-->
            <Menu DockPanel.Dock="Top">
                <!--MAIN TOP MENU - FILE DROP DOWN-->
                <MenuItem Header="_File">
                    <MenuItem Header="_New"/>
                    <MenuItem Header="_Open" ToolTip="Open saved SolveIT file" Icon="&#x1F4C2;"/>
                    <Separator/>
                    <MenuItem Header="_Save" ToolTip="Save" Icon="&#x1F4BE;">
                        <MenuItem Header="_Save" Icon="&#128190;"/>
                        <MenuItem Header="Save as" Icon="&#128190;"/>
                        <MenuItem Header="Save all"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="E_xit" Click="OnExitMenuClicked"/>
                </MenuItem>
                <!--MAIN TOP MENU - EDIT DROPDOWN-->
                <MenuItem Header="_Edit"></MenuItem>
                <!--MAIN TOP MENU - VIEW DROPDOWN-->
                <MenuItem Header="_View"></MenuItem>
                <!--MAIN TOP MENU - TOOLS DROPDOWN-->
                <MenuItem Header="_Tools"></MenuItem>
                <!--MAIN TOP MENU - HELP DROPDOWN-->
                <MenuItem Header="_Help">
                    <MenuItem Header="Test Document" Click="OnTestDocClicked"/>
                    <MenuItem Header="View Help"/>
                </MenuItem>
            </Menu>

            <!-- TOOL BAR MENU -->
            <ToolBarTray DockPanel.Dock="Top" Style="{StaticResource ToolBarTray_Style}">
                <ToolBar DockPanel.Dock="Top" Style="{StaticResource ToolBar_Style}">
                    <!-- BACK BUTTON -->
                    <Button x:Name="Back" ToolBar.OverflowMode="AsNeeded" ToolTip="Navigate Back" Click="OnBack_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/back.png" Width="25"/>
                    </Button>
                    <!-- FOREWARD BUTTON -->
                    <Button x:Name="Forward" ToolBar.OverflowMode="AsNeeded" ToolTip="Navigate Forward" Click="OnForward_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/forward.png" Width="25"/>
                    </Button>
                <Separator/>
                    <!-- NEW BUTTON -->
                    <Button Command="New" ToolBar.OverflowMode="AsNeeded" ToolTip="New SolveIT" Click="OnNew_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/newFile.png" Width="25"/>
                    </Button>
                    <!-- OPEN BUTTON -->
                    <Button Command="Open" ToolBar.OverflowMode="AsNeeded" ToolTip="Open Previous SolveIT Solutions" Click="OnOpen_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/openFolder.png" Width="25"/>
                    </Button>
                    <!-- SAVE BUTTON -->
                    <Button Command="Save" ToolBar.OverflowMode="AsNeeded" ToolTip="Save" Click="OnSave_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/save.png" Width="25"/>
                    </Button>
                    <!-- SAVE AS BUTTON -->
                    <Button Command="SaveAs" ToolBar.OverflowMode="AsNeeded" ToolTip="Save As" Click="OnSaveAs_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/saveAs.png" Width="25"/>
                    </Button>
                    <!-- PRINT BUTTON -->
                    <Button ToolBar.OverflowMode="AsNeeded" ToolTip="Print SolveIT Solution" Click="OnPrint_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/print.png" Width="25"/>
                    </Button>
                    <!-- PAGE SETUP BUTTON -->
                    <Button ToolBar.OverflowMode="AsNeeded" ToolTip="Print SolveIT Solution" Click="OnPageSetup_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/pageSetup.png" Width="25"/>
                    </Button>
                <Separator/>
                    <!-- CUT BUTTON -->
                    <Button Command="Cut" ToolTip="Cut Selection to Windows Clipboard" Click="OnCut_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/cut.png" Width="25"/>
                    </Button>
                    <!-- COPY BUTTON -->
                    <Button Command="Copy" ToolTip="Copy Selection to Windows Clipboard" Click="OnCopy_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/copy.png" Width="25"/>
                    </Button>
                    <!-- PASTE BUTTON -->
                    <Button Command="Paste" ToolTip="Paste From Windows Clipboard" Click="OnPaste_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/paste.png" Width="25"/>
                    </Button>
                    <!-- UNDO BUTTON -->
                    <Button Command="Undo" ToolTip="Undo" Click="OnUndo_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/undo.png" Width="25"/>
                    </Button>
                    <!-- REDO BUTTON -->
                    <Button Command="Redo" ToolTip="Redo" Click="OnRedo_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/redo.png" Width="25"/>
                    </Button>
                <Separator/>
                    <!-- RUN/SUBMIT BUTTON -->
                    <Button ToolTip="Run Input" Click="OnRun_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/run.png" Width="25"/>
                    </Button>
                    <ComboBox Width="100" Padding="3 2 3 2">
                        <ComboBoxItem Content="Something"/>
                        <ComboBoxItem Content="Something Else"/>
                    </ComboBox>
                    <!-- STAND ALONE KEYPAD BUTTON -->
                    <Button ToolTip="Keypad" Click="OnKeypad_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/calculator.png" Width="25"/>
                    </Button>
                <Separator/>
                    <!-- SETTINGS BUTTON -->
                    <Button x:Name="SettingsBtn" ToolTip="SolveIT Settings" Click="OnSettings_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/settings.png" Width="25"/>
                    </Button>
                    <!-- HELP BUTTON -->
                    <Button x:Name="HelpBtn" ToolTip="SolveIT Help Library" Click="OnHelp_Clicked" Style="{StaticResource Btn_ToolBar}">
                        <Image Source="../images/icons/lifebuoy.png" Width="25"/>
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <!-- BOTTOM SECTION OF DOCKPANEL -->
            <!-- Although not the main bottom section of the interpreter
            this section contains a status bar for the interpreter-->
            <StatusBar Name="statBar" DockPanel.Dock="Bottom" Background="LightGray" VerticalAlignment="Bottom" Margin="0 3 0 0">
                <StatusBarItem>
                    <TextBlock FontSize="10">Ready...</TextBlock>
                </StatusBarItem>
            </StatusBar>

            <!-- TOP SECTION OF DOCK PANEL (EXCLUDING MAIN MENU)-->
            <!-- This is the main section of where any outputs will be 
            displayed. Possible introduce a tab system to view different
            versions of an output i.e. graphical to numerical-->
            <Grid x:Name="topDock" DockPanel.Dock="Top" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Left_Column" Width="350" MinWidth="150"/>
                    <ColumnDefinition x:Name="LeftGridSplitter_Column" Width="7"/>
                    <ColumnDefinition x:Name="Centre_Column" Width="*"/>
                    <ColumnDefinition x:Name="RightGridSplitter_Column" Width="7"/>
                    <ColumnDefinition x:Name="Right_Column" Width="260" MinWidth="290"/>
                </Grid.ColumnDefinitions>
                <!-- LEFT COLUMN OF CENTRE GRID-->
                <!-- Left Section to include a Variable Table
                and links to documentation relevant to the interpreter-->
                <Grid Name="leftGrid" Margin="3 3 3 3" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="7"/>
                        <RowDefinition Height="*" MinHeight="320"/>
                    </Grid.RowDefinitions>

                    <Grid Name="varGrid" Margin="3" Grid.Row="0">
                        <DataGrid Name="varTable" AutoGenerateColumns="True" ColumnWidth="0.5*" Grid.Row="0" Style="{StaticResource DataGrid_Style}" IsReadOnly="True" RowHeaderWidth="0" />
                    </Grid>

                    <!--</DockPanel>-->
                    <!-- *********************************************************************************************************** -->
                    <GridSplitter x:Name="Left2Mid_Splitter" Grid.Row="1" Style="{StaticResource GrdSpltrHorizontal_Style}"/>
                    <!-- *********************************************************************************************************** -->

                    <!-- *********************************************************************************************************** -->
                    <Grid Name="bottomLeftGrid" Grid.IsSharedSizeScope="True" Grid.Row="2" Grid.Column="0" Margin="0 3 0 0">
                        <TabControl x:Name="BottomLeft_TabMenu"  TabStripPlacement="Left" Style="{StaticResource mainTabControlStyle}">
                            <TabItem Header="Notes" Style="{StaticResource LeftTab}">
                                <Grid x:Name="NotesGrid" >
                                    <Grid Background="#5E5E5E" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="16"/>
                                            <RowDefinition Height="16"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="47*"/>
                                            <RowDefinition Height="328*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Style="{StaticResource leftTabStackPanel_Style}"  Grid.Column="0" Grid.RowSpan="5"/>
                                        <TextBlock Padding="8" Grid.Row="0" TextTrimming="CharacterEllipsis" Foreground="White" Text="Your Notes" Grid.RowSpan="2" Grid.Column="1"/>
                                        <ToolBarTray Grid.Row="2" Grid.Column="1">
                                            <ToolBar>
                                                <Button Name="notesNew" ToolBar.OverflowMode="Never" ToolTip="Add Note" Click="OnNewNote_Clicked">
                                                    <Image Source="../images/icons/newFile.png" Width="20"/>
                                                </Button>
                                                <Button Name="notesCut" ToolBar.OverflowMode="Never" ToolTip="Cut" Click="OnCut_Clicked">
                                                    <Image Source="../images/icons/cut.png" Width="20"/>
                                                </Button>
                                                <Button x:Name="notesCopy" ToolBar.OverflowMode="Never" ToolTip="Cut" Click="OnCopy_Clicked">
                                                    <Image Source="../images/icons/copy.png" Width="20"/>
                                                </Button>
                                                <Button x:Name="notesPaste" ToolBar.OverflowMode="Never" ToolTip="Cut" Click="OnPaste_Clicked">
                                                    <Image Source="../images/icons/paste.png" Width="20"/>
                                                </Button>
                                            </ToolBar>
                                        </ToolBarTray>
                                        <TreeView Grid.Row="3" Grid.RowSpan="2" Grid.Column="1">
                                            <TreeViewItem Header="My Solution">
                                                <TreeViewItem Header="Project #1"/>
                                                <TreeViewItem Header="Project #2"/>
                                                <TreeViewItem Header="Project #3"/>
                                            </TreeViewItem>
                                        </TreeView>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Documentation" Style="{StaticResource LeftTab}">
                                <!--<StackPanel Background="{StaticResource BackgroundTrue_TabItem}" Margin="-3 -3 0 0" Width="5"  />-->
                                <Grid x:Name="DocsGrid" Grid.Column="0" Background="#5E5E5E" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Style="{StaticResource leftTabStackPanel_Style}" Grid.Column="0" Grid.RowSpan="2"/>
                                    <TextBlock Padding="8" TextTrimming="CharacterEllipsis" Foreground="White" Text="Documentation" Grid.Row="0" Grid.Column="1"/>
                                    <DocumentViewer Name="mainDocViewer" Padding="10" Grid.Row="1" Grid.Column="1"/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>

                <!-- *********************************************************************************************************** -->
                <GridSplitter x:Name="LeftGridSplitter" Style="{StaticResource GrdSpltrVertical_Style}" Grid.Column="1"/>
                <!-- *********************************************************************************************************** -->
                <Grid Name="centreGrid" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="60" MinHeight="60"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="mainOutputGrid" Margin="3" Grid.Row="0">
                        <TabControl Style="{StaticResource mainTabControlStyle}">
                            <TabItem Header="Numerical Workshop" Style="{StaticResource mainTab}">
                                <StackPanel x:Name="NumericalWorkshop_StackPanel">
                                    <StackPanel Style="{StaticResource TabHeaderStackPanel_Style}"/>
                                    <ListBox x:Name="Results" Style="{StaticResource ListBox_Style}" MinHeight="780" >
                                        <!--<ToolBarTray Orientation="Vertical">
                                        <ToolBar>
                                            <Button x:Name="listCut" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnCut_Clicked">
                                                <Image Source="../images/icons/cut.png" Width="20"/>
                                            </Button>
                                            <Button x:Name="listCopy" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnCopy_Clicked">
                                                <Image Source="../images/icons/copy.png" Width="20"/>
                                            </Button>
                                            <Button x:Name="listPaste" ToolBar.OverflowMode="AsNeeded" ToolTip="Cut" Click="OnPaste_Clicked">
                                                <Image Source="../images/icons/paste.png" Width="20"/>
                                            </Button>
                                        </ToolBar>
                                    </ToolBarTray>-->
                                    </ListBox>
                                </StackPanel>
                                
                            </TabItem>
                            <TabItem Header="Graphs" Style="{StaticResource mainTab}">
                                <StackPanel x:Name="Graphs_StackPanel">
                                    <StackPanel Style="{StaticResource TabHeaderStackPanel_Style}"/>
                                    <TextBlock Text="Fancy Graphs will go here..."/>
                                    <Grid x:Name="LvChrt_Grid" Height="400">
                                        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Bottom" >
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Sales" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Month" Labels="{Binding Labels}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="LaTeX Output" Style="{StaticResource mainTab}">
                                <StackPanel x:Name="Latex_StackPanel">
                                    <StackPanel Style="{StaticResource TabHeaderStackPanel_Style}"/>
                                    <TextBlock Text="PDF output here...."/>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>

                    <!-- GRID SPLITTER BETWEEN THE INPUT & OUTPUT DISPLAYS -->
                    <GridSplitter x:Name="InputOutput_GridSplitter" Grid.Row="1" Style="{StaticResource GrdSpltrHorizontal_Style}"/>

                    <!-- INPUT SECTION (TEXT BOX AND RUN BUTTON) -->
                    <Grid x:Name="inputGrid" Margin="3" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- INPUT TEXT BOX -->
                        <TextBox Grid.Column="0" Text="plot(y=x,1&lt;x&lt;10)" Margin="0 0 0 3" Name="inputBox" FontSize="20" Padding="5"/>
                        <!-- RUN/SUBMIT BUTTON -->
                        <Button Name="submitBtn" Click="OnRun_Clicked" IsDefault="True" Grid.Column="1" Margin="3 0 0 3"  Padding="5" Style="{StaticResource submitBtn_Style}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Run" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="26" Margin="6 3 0 3 "/>
                                <Image Source="../images/icons/run.png" Height="40"  Margin="6 0 3 3"/>
                                <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>

                <GridSplitter x:Name="Right2Mid_Splitter" Grid.Column="3" Style="{StaticResource GrdSpltrVertical_Style}"/>

                <!-- RIGHT SECTION OF CENTRE GRID-->
                <!-- Right Section to include a drag drop "favourites"
                functions that can be taken from the below keypad selector -->
                <Grid x:Name="rightGridColumn" Margin="3 0 0 0" Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="11"/>
                        <RowDefinition Height="*" MinHeight="490"/>
                    </Grid.RowDefinitions>
                    
                    <TabControl x:Name="TopRight_TabMenu"  TabStripPlacement="Right" Style="{StaticResource mainTabControlStyle}">
                        <TabItem Header="Favourites" Style="{StaticResource RightTab}" Grid.Column="2">
                            <Grid x:Name="favs_Grid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="3"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Style="{StaticResource rightTabStackPanel_Style}" Grid.Column="1"/>
                                <StackPanel Orientation="Horizontal" Background="LightGray" Margin="0 0 -2 0" Grid.Column="0">
                                    <WrapPanel x:Name="favsPanel" Margin="0" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="320" AllowDrop="True" Drop="OnDrop"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Alt Spare" Style="{StaticResource RightTab}">
                            <Grid x:Name="spare_Grid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="3"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Style="{StaticResource rightTabStackPanel_Style}" Grid.Column="1"/>
                                <StackPanel Orientation="Horizontal" Background="LightGray" Margin="0 0 -2 0" Grid.Column="0"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    
                    <!-- *********************************************************************************************************** -->
                    <GridSplitter x:Name="FavouriteKeypadSplitter" Grid.Row="1" Style="{StaticResource GrdSpltrHorizontal_Style}"/>
                    <!-- *********************************************************************************************************** -->
                    <Grid x:Name="keypadSelector" Margin="3 3 3 3" Grid.Row="2">
                        <TabControl x:Name="BottomRight_TabMenu"  TabStripPlacement="Right" Style="{StaticResource mainTabControlStyle}">
                            <TabItem Header="Keypad" Style="{StaticResource RightTab}" Margin="0 0 -1 0">
                                
                                <TabControl x:Name="Keypad_TabMenu" MaxWidth="260" MaxHeight="460" Style="{StaticResource mainTabControlStyle}">
                                    <!-- NUMERICAL TAB-->
                                    <TabItem Header="Numbers" Style="{StaticResource keypadTab}">
                                        <StackPanel Orientation="Horizontal">
                                            <WrapPanel x:Name="numberPanel" Margin="3 0 3 0" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="400">
                                                <!-- FIRST ROW OF 3 ITEMS/FUNCTIONS -->
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="30" Click="OnLessThan_Clicked">
                                                    <Image Source="../images/numerical/lessThan.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="30" Click="OnEqual_Clicked">
                                                    <Image Source="../images/arithmetic/equals.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="30" Click="OnGreaterThan_Clicked">
                                                    <Image Source="../images/numerical/moreThan.png" Height="40"/>
                                                </Button>
                                                <!-- SECOND ROW OF 3 ITEMS/FUNCTIONS -->
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On7_Clicked">
                                                    <Image Source="../images/numerical/seven.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On8_Clicked">
                                                    <Image Source="../images/numerical/eight.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On9_Clicked">
                                                    <Image Source="../images/numerical/nine.png" Height="40"/>
                                                </Button>
                                                <!-- THIRD ROW OF 3 ITEMS/FUNCTIONS -->
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On4_Clicked">
                                                    <Image Source="../images/numerical/four.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On5_Clicked">
                                                    <Image Source="../images/numerical/five.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On6_Clicked">
                                                    <Image Source="../images/numerical/six.png" Height="40"/>
                                                </Button>
                                                <!-- FOURTH ROW OF 3 ITEMS/FUNCTIONS -->
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On1_Clicked">
                                                    <Image Source="../images/numerical/one.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On2_Clicked">
                                                    <Image Source="../images/numerical/two.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On3_Clicked">
                                                    <Image Source="../images/numerical/three.png" Height="40"/>
                                                </Button>
                                                <!-- FIFTH ROW OF 3 ITEMS/FUNCTIONS -->
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="On0_Clicked">
                                                    <Image Source="../images/numerical/zero.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="OnDecimal_Clicked">
                                                    <Image Source="../images/numerical/decimal.png" Height="40"/>
                                                </Button>
                                                <Button Style="{StaticResource kepadBtns_Style}" FontSize="24" Click="OnAns_Clicked">
                                                    <Image Source="../images/numerical/ans.png" Height="40"/>
                                                </Button>
                                            </WrapPanel>
                                        </StackPanel>
                                    </TabItem>
                                    <!-- ARITHMETIC FUNCTIONS TAB -->
                                    <TabItem Header="Arithmetic Functions" Style="{StaticResource keypadTab}">
                                        <StackPanel Orientation="Horizontal">
                                            
                                            <WrapPanel x:Name="functionPanel" Margin="3" ItemWidth="80" ItemHeight="80" MaxWidth="240" MaxHeight="400" MouseRightButtonDown="OnDrag">
                                                <!-- FIRST ROW OF 3 ITEMS/FUNCTIONS -->
                                                <!-- LEFT BRACKET BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnLeftBracket_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/leftBracket.png" Height="40"/>
                                                        <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Bracket]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- INDICE BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnApprox_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/numerical/approx.png" Height="40"/>
                                                        <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Approx]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- RIGHT BRACKET BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnRightBracket_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/rightBracket.png" Height="40"/>
                                                        <!--<TextBlock Text="&#x2d;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Bracket]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- SECOND ROW OF 3 ITEMS/FUNCTIONS -->
                                                <!-- ADDITION BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnAdd_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/add.png" Height="40"/>
                                                        <!--<TextBlock Text="&#xd7;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Addition]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- SUBTRACTION BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnSub_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/sub.png" Height="40"/>
                                                        <!--<TextBlock Text="&#xf7;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Subtract]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- INDICE BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnIndice_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/indice.png" Height="40"/>
                                                        <!--<TextBlock Text="" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
                                                        <TextBlock Text="[Indice]" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- THIRD ROW OF 3 ITEMS/FUNCTIONS -->
                                                <!-- MULTIPLICATION BUTTON-->
                                                <Button Style="{StaticResource kepadBtns_Style}" Click="OnMul_Clicked">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image Source="../images/arithmetic/mul.png" Height="40"/>
                                                        <!--<TextBlock Text="&#x2b;" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="34"/>-->
