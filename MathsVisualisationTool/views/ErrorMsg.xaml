<Window x:Class="MathsVisualisationTool.ErrorMsg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathsVisualisationTool"
      mc:Ignorable="d" 
      d:DesignHeight="175" d:DesignWidth="400"
      SizeToContent="WidthAndHeight"
      ResizeMode="NoResize"
      Title="ERROR!"
      Background="{StaticResource MainColour_MainBackground}"
      WindowStartupLocation="CenterOwner"
      ShowInTaskbar="False" 
      Topmost="True"
      TextOptions.TextFormattingMode="Display" 
      TextOptions.TextRenderingMode="ClearType" 
      UseLayoutRounding="True">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource error_StackPanel}" Width="400" Height="150">
            <DockPanel x:Name="errMsgDock" LastChildFill="True" Width="auto">

                <Image Source="../images/icons/error100.png" DockPanel.Dock="Left" Height="90" Margin="10"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Label Content="ERROR" FontSize="28" Style="{StaticResource errorLabel_Style}" HorizontalAlignment="Left" Margin="10" />
                    <TextBlock x:Name="errorCode" FontSize="28" Style="{StaticResource errorTextBlock_Style}" HorizontalAlignment="Right"/>
                </StackPanel>
                
                <TextBlock Name="erroMsgText" DockPanel.Dock="Top" Style="{StaticResource errorTextBlock_Style}"/>
                
            </DockPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="okayBtn" Content="OK" Style="{StaticResource errorBtn_Style}" Grid.Column="0" Height="25"/>
                <Button x:Name="cancelBtn" Content="Cancel" Style="{StaticResource errorBtn_Style}" Grid.Column="1"/>
                
            </Grid>

        </StackPanel>
    </Grid>

